{
  "ts-node": {  "files": true },
  "include": ["src/**/*", "tests/**/*", "declarations.d.ts"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "declaration": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
